<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="
       http://www.springframework.org/schema/beans 
       http://www.springframework.org/schema/beans/spring-beans-2.5.xsd
       http://www.springframework.org/schema/context 
       http://www.springframework.org/schema/context/spring-context-2.5.xsd
       http://camel.apache.org/schema/spring 
       http://camel.apache.org/schema/spring/camel-spring.xsd">

	<context:annotation-config />

	<import resource="classpath:humsat-commanding.xml" />
	<import resource="classpath:humsat-simulator.xml" />
	<import resource="classpath:humsat-validator.xml" />
	<import resource="classpath:humsat-taskexecutor.xml" />
	<import resource="classpath:humsat-logging.xml" />
	<import resource="classpath:humsat-orbitalprediction.xml" />
	<import resource="classpath:humsat-metadata-publisher.xml" />
	<import resource="classpath:humsat-jsonpublish.xml" />	
	
	<camelContext id="context" xmlns="http://camel.apache.org/schema/spring">
		<template id="producer"/>
	
		<routeContextRef ref="simulatorRoutes" />
		<routeContextRef ref="validatorRoutes" />
		<routeContextRef ref="commandreleaserRoutes" />
		<routeContextRef ref="taskexecutorRoutes" />
		<routeContextRef ref="loggingRoutes" />
		<routeContextRef ref="orbitalpredictionRoutes" />
		<routeContextRef ref="metadatapublisherRoutes"/>
		<routeContextRef ref="jsonPublishRoutes"/>
		
	</camelContext>
	
</beans>