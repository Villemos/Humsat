<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="
       http://www.springframework.org/schema/beans 
       http://www.springframework.org/schema/beans/spring-beans-2.5.xsd
       http://www.springframework.org/schema/context 
       http://www.springframework.org/schema/context/spring-context-2.5.xsd
       http://camel.apache.org/schema/spring 
       http://camel.apache.org/schema/spring/camel-spring.xsd">

	<bean id="commandreleaser" class="com.logica.hummingbird.command.releaser.CommandReleaser"/>

	<bean id="stateBuffer" class="com.logica.hummingbird.buffers.StateBuffer"/>

	<routeContext id="commandreleaserRoutes" xmlns="http://camel.apache.org/schema/spring">

		<route>
			<from uri="activemq:topic:Parameters?selector=Type='State Parameter'"/>
			<to uri="bean:stateBuffer"/>
		</route>

		<route>
			<from uri="activemq:queue:Commands" />
			<to uri="bean:commandreleaser" />
			<to uri="activemq:queue:ReleasedCommands" />
		</route>
		
		<route>
			<from uri="direct:tasks" />
			<to uri="activemq:queue:Tasks" />
		</route>
		
		
	</routeContext>
</beans>