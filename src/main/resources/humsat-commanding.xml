<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="
       http://www.springframework.org/schema/beans 
       http://www.springframework.org/schema/beans/spring-beans-2.5.xsd
       http://www.springframework.org/schema/context 
       http://www.springframework.org/schema/context/spring-context-2.5.xsd
       http://camel.apache.org/schema/spring 
       http://camel.apache.org/schema/spring/camel-spring.xsd">

	<context:annotation-config/>

	<bean id="commandreleaser" class="org.hbird.business.command.releaser.CommandReleaser"/>
	
	<bean id="header.mapper" class="org.hbird.exchange.utilities.AllFields"/>
	

	<camelContext id="commandreleaserContext" xmlns="http://camel.apache.org/schema/spring"> 
	
		<!-- Route to receive and store state parameters. -->
		<route>
			<from uri="activemq:topic:Parameters?selector=Type='State Parameter'"/>
			<to uri="bean:stateBuffer"/>
		</route>

		<!-- Route to receive commands injected from somebody, and release them. -->
		<route>
			<from uri="activemq:queue:Commands1" />
			<to uri="bean:commandreleaser" />
			<to uri="bean:header.mapper"/>
			<to uri="activemq:queue:ReleasedCommands1" />
		</route>
		
		<!-- Route to inject tasks, used by the commandreleaser. -->
		<route>
			<from uri="direct:tasks" />
			<to uri="bean:header.mapper"/>
			<to uri="activemq:queue:Tasks1" />
		</route>
		
	</camelContext>

</beans>