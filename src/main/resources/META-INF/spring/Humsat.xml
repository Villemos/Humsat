<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="
       http://www.springframework.org/schema/beans 
       http://www.springframework.org/schema/beans/spring-beans-2.5.xsd
       http://www.springframework.org/schema/context 
       http://www.springframework.org/schema/context/spring-context-2.5.xsd
       http://camel.apache.org/schema/spring 
       http://camel.apache.org/schema/spring/camel-spring.xsd">

	<context:annotation-config />

	<!-- ### TM data supplier ("transport tier")### -->
	<import resource="classpath:transportTier/ccsds-decoder.xml" />
	<!-- 	<import resource="classpath:parameterSimulator/simulator.xml" /> -->


	<!-- ### Business tier ### -->

	<import resource="classpath:navigation/orbit-predictor-orekit.xml" />
	<import resource="classpath:commandingChain/command-releaser.xml" />
	<import resource="classpath:commandingChain/task-executor.xml" />
	<import resource="classpath:parameterValidator/validator.xml" />
<!-- 	<import resource="classpath:parameterStorage/archiver.xml" /> --> 	<!-- Needs a database. -->
<!-- 	<import resource="classpath:parameterStorage/retriever.xml"/> -->	<!-- Needs a database. -->

<!-- 	<import resource="classpath:humsat-logging.xml" /> -->
<!-- 	<import resource="classpath:humsat-jsonpublish.xml" /> -->

	<import resource="classpath:metadata/publisher.xml" />


	<camelContext id="context" xmlns="http://camel.apache.org/schema/spring">
		<template id="producer" />

		<route>
			<from uri="activemq:topic:Parameters" />
			<setBody>
				<simple>${in.body.name}: ${in.body.value}</simple>
        	</setBody>
			<to uri="stream:out" />
		</route>

		<!-- <routeContextRef ref="orbitalpredictionRoutes" /> -->
		<!-- <routeContextRef ref="metadatapublisherRoutes" /> -->
		
	</camelContext>

</beans>
