<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="
       http://www.springframework.org/schema/beans 
       http://www.springframework.org/schema/beans/spring-beans-2.5.xsd
       http://www.springframework.org/schema/context 
       http://www.springframework.org/schema/context/spring-context-2.5.xsd
       http://camel.apache.org/schema/spring 
       http://camel.apache.org/schema/spring/camel-spring.xsd">

	<!-- double angularFrequency, double amplitude, double phase, double intercept, long modolus, String name, String description -->
	<bean id="temperature.at.cpu.board" class="com.logica.hummingbird.simpleparametersimulator.SinusCurveParameter">
		<constructor-arg index="0" value="0.000010472"/>
		<constructor-arg index="1" value="30"/>
		<constructor-arg index="2" value="3.141592654"/>
		<constructor-arg index="3" value="55"/>
		<constructor-arg index="4" value="600000"/>
		<constructor-arg index="5" value="CPU Temperature"/>
		<constructor-arg index="6" value="The Temperature at CPU Sensor Board"/>
	</bean>

	<bean id="voltage.of.battery" class="com.logica.hummingbird.simpleparametersimulator.ConstantParameter">
		<constructor-arg index="0" value="120"/>
		<constructor-arg index="1" value="Battery Voltage"/>
		<constructor-arg index="2" value="The Voltage of the Battery"/>
	</bean>

	<bean id="state.of.video.stream" class="com.logica.hummingbird.simpleparametersimulator.ConstantParameter">
		<constructor-arg index="0" value="1"/>
		<constructor-arg index="1" value="Video Stream State"/>
		<constructor-arg index="2" value="The State of the Video Stream"/>
	</bean>
	
	<bean id="state.of.payload" class="com.logica.hummingbird.simpleparametersimulator.ConstantParameter">
		<constructor-arg index="0" value="1"/>
		<constructor-arg index="1" value="Payload State"/>
		<constructor-arg index="2" value="The State of the Payload"/>
	</bean>

	<bean id="longitude" class="com.logica.hummingbird.simpleparametersimulator.SinusCurveParameter">
		<constructor-arg index="0" value="0.000010472"/>
		<constructor-arg index="1" value="180"/>
		<constructor-arg index="2" value="0"/>
		<constructor-arg index="3" value="0"/>
		<constructor-arg index="4" value="600000"/>
		<constructor-arg index="5" value="Longitude"/>
		<constructor-arg index="6" value="The longitude of the satellite"/>
	</bean>

	<bean id="latitude" class="com.logica.hummingbird.simpleparametersimulator.SinusCurveParameter">
		<constructor-arg index="0" value="0.000010472"/>
		<constructor-arg index="1" value="70"/>
		<constructor-arg index="2" value="0"/>
		<constructor-arg index="3" value="0"/>
		<constructor-arg index="4" value="600000"/>
		<constructor-arg index="5" value="Latitude"/>
		<constructor-arg index="6" value="The latitude of the satellite"/>
	</bean>

	<bean id="elevation" class="com.logica.hummingbird.simpleparametersimulator.SinusCurveParameter">
		<constructor-arg index="0" value="0.000010472"/>
		<constructor-arg index="1" value="20000"/>
		<constructor-arg index="2" value="0"/>
		<constructor-arg index="3" value="900000"/>
		<constructor-arg index="4" value="600000"/>
		<constructor-arg index="5" value="Elevation"/>
		<constructor-arg index="6" value="The elevation of teh satellite"/>
	</bean>

	<bean id="time" class="com.logica.hummingbird.simpleparametersimulator.TimeParameter">
		<constructor-arg index="0" value="Time"/>
		<constructor-arg index="0" value="The current onboard time."/>
	</bean>


	<routeContext id="simulatorRoutes" xmlns="http://camel.apache.org/schema/spring">

		<route>
			<from uri="timer://temperature.at.cpu.board?fixedRate=true&amp;period=1000" />
			<to uri="bean:temperature.at.cpu.board" />
			<to uri="activemq:topic:Parameters" />
		</route>

		<route>
			<from uri="timer://state.of.battery?fixedRate=true&amp;period=1000" />
			<to uri="bean:state.of.battery" />
			<to uri="activemq:topic:Parameters" />
		</route>

		<route>
			<from uri="timer://state.of.video.streamfixedRate=true&amp;period=1000" />
			<to uri="bean:state.of.video.stream" />
			<to uri="activemq:topic:Parameters" />
		</route>

		<route>
			<from uri="timer://state.of.payload?fixedRate=true&amp;period=1000" />
			<to uri="bean:state.of.payload" />
			<to uri="activemq:topic:Parameters" />
		</route>

		<route>
			<from uri="timer://longitude?fixedRate=true&amp;period=1000" />
			<to uri="bean:longitude" />
			<to uri="activemq:topic:Parameters" />
		</route>

		<route>
			<from uri="timer://latitude?fixedRate=true&amp;period=1000" />
			<to uri="bean:latitude" />
			<to uri="activemq:topic:Parameters" />
		</route>

		<route>
			<from uri="timer://elevation?fixedRate=true&amp;period=1000" />
			<to uri="bean:elevation" />	
			<to uri="activemq:topic:Parameters" />
		</route>
		
	</routeContext>
</beans>