<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="
       http://www.springframework.org/schema/beans 
       http://www.springframework.org/schema/beans/spring-beans-2.5.xsd
       http://www.springframework.org/schema/context 
       http://www.springframework.org/schema/context/spring-context-2.5.xsd
       http://camel.apache.org/schema/spring 
       http://camel.apache.org/schema/spring/camel-spring.xsd">

	<bean id="jsonmapper" class="com.logica.hummingbird.parameterjsonpublisher.DataSender"/>

	<routeContext id="jsonPublishRoutes" xmlns="http://camel.apache.org/schema/spring">

		<route>
			<from uri="activemq:topic:Parameters" />
			<to uri="bean:jsonmapper"/>
			<to uri="cometd://0.0.0.0:8086/parameter/live"/>
		</route>

		<route>
			<from uri="activemq:topic:Logs" />
			<to uri="bean:jsonmapper"/>
			<to uri="cometd://0.0.0.0:8086/logs/live"/>
		</route>
				
	</routeContext>
</beans>