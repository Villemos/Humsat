<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="
       http://www.springframework.org/schema/beans 
       http://www.springframework.org/schema/beans/spring-beans-2.5.xsd
       http://www.springframework.org/schema/context 
       http://www.springframework.org/schema/context/spring-context-2.5.xsd
       http://camel.apache.org/schema/spring 
       http://camel.apache.org/schema/spring/camel-spring.xsd">

	<context:annotation-config />

	<bean id="navigation.client" class="com.clearstream.humsat.NavigationListener"/>
	
	<bean id="parameter.client" class="com.clearstream.humsat.ParameterListener"/>

	<camelContext id="context" xmlns="http://camel.apache.org/schema/spring">
		<template id="producer"/>
		
		<route>
			<from uri="activemq:topic:OrbitalPredictions"/>
			<to uri="bean:navigation.client"/>			
		</route>

		<route>
			<from uri="activemq:topic:Parameters"/>
			<to uri="bean:parameter.client"/>
		</route>
		
	</camelContext>
	
</beans>